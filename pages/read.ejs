	<script>
resize_to_fit();
function resize_to_fit() {
  let fontsize = $('div.judulnya').css('font-size');
  $('div.judulnya').css('fontSize', parseFloat(fontsize) - 1);
	
	//console.log($('div.judulnya').height());
	//console.log($('div.judulnya').css('font-size'));
	if($('div.judulnya').height() == 0){return;}
  if ($('div.judulnya').height() > $('div#juduldiv').height()) {
    resize_to_fit();
  }
}
</script>
<script>
$('#submit').on('click',function(){
	var person = prompt("Please enter your name:", "Plato");
  if (person == null || person == "") {} else {
	$.post("/api/doComment",
  {
    id: "<%= paper._id %>",
    comment: $("#formInput183")[0].value,
	name: person
  },
  function(data, status){
	if(status=="success"){
        $("div.komentarnya.scroll-content")[0].innerHTML += "<blockquote><cite>- "+data.data.name.replace(/<\/?[^>]+>/ig, "")+"</cite><br>"+data.data.text.replace(/<\/?[^>]+>/ig, "")+"</blockquote>";
	}
  });
  }
});
</script>
<script>
function load_comment_all(){
	$.get("/api/getCommentByPaperId?id=<%= paper._id %>", function(data, status){
		for(var i = 0, len = data.length; i<len; i++){
			$("div.komentarnya.scroll-content")[0].innerHTML += "<blockquote><cite>- "+data[i].name.replace(/<\/?[^>]+>/ig, "")+"</cite><br>"+data[i].text.replace(/<\/?[^>]+>/ig, "")+"</blockquote>";
		}
	});
}
</script>
